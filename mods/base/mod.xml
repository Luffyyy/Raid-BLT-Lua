<table
		name="Raid WW2 BLT"
		global_key = "BLT"
		log_name = "BLT"
		merge_global = "true"
		priority="1001"
		image="blt.png"
		author="James Wilkinson, Luffy, BangL"
		color="Color('bf204b')"
		description="The collection of Lua files that allow the BLT hook to function."
		cannot_be_disabled="true"
